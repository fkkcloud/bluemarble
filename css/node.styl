.slide-node{}

.node {
  position:relative;
  display:inline-block;
  left: 0%;
  width: 130px;
  height: 130px;
  background-color: #393939;
  border-radius: 50%;
  border-width: 4px;
  border-style: solid;
  border-color: #393939;
  transform: scale(0.0);
  margin: 40px 0px 20px 0px;
  overflow:hidden;
}
.node-animation{
    -webkit-animation: node 90s 0s linear forwards;
}

@-webkit-keyframes node {

  2%    {
    border-radius: 50%;
    transform: scale(1.0); 
    border-color: #999999;
  }

  9%    {
    border-width: 4px;
    background-color: #393939;
    border-color: #999999;
  }
  10%   {
    border-width: 0px;
    background-color: #FF9966; /* red "Heart Failuer" */
    }
  13%   { 
    background-color: #FF9966;
  } 
  14%   { 
    background-color: #FF66CC; /* magenta "Infectious and Parasitic diseases" */
  }
  17%   { 
    background-color: #FF66CC;
  } 
  18%   { 
    background-color: #FFF; /* white "Disease of genitourinary system" */
  }
  21%   { 
    background-color: #FFF;
  }
  22%   { 
    background-color: #FF3300; /* orage "Endocrine, metabolic and immune disease" */
  }
  25%   { 
    background-color: #FF3300; 
  }
  26%   { 
    transform: scale(1.0); /* size change start */
  }
  27%   { 
    transform: scale(0.0); 
  }
  29%   { 
    transform: scale(0.0); 
  }
  32%   { 
    transform: scale(1.4);
  }
  34%   { 
    transform: scale(1.4);
  }
  35%  { 
    transform: scale(1.0); /* size change end */
  }
  37%  { 
    border-width: 0; /* border change start */
  }
  38%  {
    border-width: 8px; 
  }
  41%  {
    border-color: #999999; /* border color change start */
  }
  42%  {
    border-color: #1ebaff; /* blue */
  }
  45%  {
    border-color: #1ebaff; 
  }
  46%  {
    border-color: #FFFF99; /* yellow */
  }
  49%  {
    border-color: #FFFF99; 
  }
  50%  {
    border-color: #FF5050; /* red */ /* border end */
  }
  53%  {
    background-color: #FF3300;
    border-width: 8px;
    border-radius: 50%;
    border-color: #FF5050; /* red */
  }
  /* died node start */
  54%  {
    border-width: 0px; 
    border-radius: 5%;
    border-color: #999999;
    background-color: #002952; /* dark blue "DEATH" */
  }
  57%  {
    transform: scale(1.0); /* death size change start */
  }
  58%  {
    transform: scale(0.0);
  }
  59%  {
    transform: scale(0.0);
  }
  62%  {
    transform: scale(1.4);
  }
  65%  {
    transform: scale(1.4);
  }
  66%  {
    transform: scale(1.0); /* death size change end */
  }
  69%  {
    border-width: 0px;
  }
  70%  {
    border-width: 8px; /* death border change end */
  }
  71%  {
    border-color: #999999;
  }
  72%  {
    border-color: #1ebaff; /* blue */
  }
  75%  {
    border-color: #1ebaff; /* blue */
  }
  76%  {
    border-color: #FFFF99; /* yellow */
  }
  79%  {
    border-color: #FFFF99; /* yellow */
  }
  80%  {
    border-color: #FF5050; /* red */
  }
  83%  {
    border-color: #FF5050; /* red */
    background-color: #002952; /* dark blue "DEATH" */
    opacity: 1;
    border-radius: 5%; /* died node */
    transform: scale(1.0);
  }
  86%  {
    opacity: 0;
    background-color: #393939; /* bg - gray color */
    border-color: #999999; /* red */
  }

  100% {
    opacity: 0;
    background-color: #393939; /* bg - gray color */
    border-color: #999999; /* red */
  }
}

