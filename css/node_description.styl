.node-description-mask {
  position:relative;
  width: 60%;
  margin: 0 auto;
  height: 112px;
  font-size: 22px;
  line-height : 28px;
  overflow: hidden;
   /*border: 1px solid #565656; */
}

.node-name {
  position: absolute;
  left: 46%;
  top: 30%;
  width: 90px;
  font-size: 12px;
  line-height : 14px;
  color: #DDDDDD;
}

.node-meta-data {
  position:relative;
  width: 50%;
  margin: 0 auto;
  height: 56px;
  font-size: 16px;
  line-height : 18px;
  overflow: hidden;
  /*border: 1px solid #565656; */
}

.node-description-each {
  width: 100%;
  margin-top: 94px;
}

.node-description-slides {
  position: absolute;
  top:0px; /* -6.5 each step */
  text-align:center;
  opacity: 0;
}
.node-description-slides-animation {
  -webkit-animation: node-description-slides 90s 0s linear forwards;
}


@-webkit-keyframes node-description-slides {
/* "Round-shaped node represents a disease" */
  2%    {
    opacity: 1;
    top:-2em; /* -6.5 each step */
  }

  5%    {
    top:-2em; /* -6.5 each step */
  }

/* "Fill color of a node means group of diseases such as..." */
  6%   {
    top:-8.5em; /* -6.5 each step */
    }
  9%   { 
    top:-8.5em; /* -6.5 each step */
  } 

/* "This color means 'Disease of Circulatory Systems' " */
  10%   { 
    top:-15em; /* -6.5 each step */  
  }
  13%   { 
    top:-15em; /* -6.5 each step */ 
  } 

 /* "Infectious and parasitic diseases" */
  14%   { 
    top:-21.5em; /* -6.5 each step */ 
  }
  17%   { 
    top:-21.5em; /* -6.5 each step */ 
  }

/* "Disease of genitourinary system" */
  18%   { 
    top:-27em; /* -6.5 each step */   }
  21%   { 
    top:-27em; /* -6.5 each step */   }

/* "Endocrine, metabolic and immune disease."" */
  22%   { 
    top:-33.5em; /* -6.5 each step */   }
  25%   { 
    top:-33.5em; /* -6.5 each step */   }

  /* "Size of circle node presents incidence of disease"*/
  26%   { 
    top:-40em; /* -6.5 each step */   }
  35%   { 
    top:-40em; /* -6.5 each step */   }

   /* "Each node has distinct border color by mean age of disease patients." */
  37%  { 
    top:-46.5em; /* -6.5 each step */   }
  52%  {
    top:-46.5em; /* -6.5 each step */   }

    /* "Squared node means died outcomes for each disease"*/  
  54%  {
    top:-53em; /* -6.5 each step */   }
  57%  {
    top:-53em; /* -6.5 each step */   }

    /* "Size of death node means Case Fatality Rate (CFR)"*/
  58%  {
    top:-59.5em; /* -6.5 each step */   }
  70%  {
    top:-59.5em; /* -6.5 each step */   }

   /* "Each node has distinct border color by mean age of died patients" */
  72%  {
    top:-66em; /* -6.5 each step */   }
  83%  {
    transform: scale(1.0);
    opacity: 1;
    top:-66em; /* -6.5 each step */   }

  /* end */  
  86%  {
    transform: scale(0.0);
    opacity: 0;
    top:-80em; /* -6.5 each step */ 
  }

  100% {
    transform: scale(0.0);
    opacity: 0;
    top:-80em; /* -6.5 each step */  
  }
}
