/* ----------------------------------------------
 slider
---------------------------------------------- */
.slide-wrap {
  margin: 5% auto 0;
  width: 70%;
}
.slide-mask {
  position: relative;
  overflow: hidden;
  height: 580px;
  width:  100%;
}
.slide-group {
  position: absolute; 
  top:  0px; 
  left: 0px;
  height: 100%;
  width: 100%;
}
.slide {
  height: 580px;
  width: 100%;
  font-family: "lato";
  font-size: 2em;
  color: #fff;
  text-align: center;
  list-style-type: none;
  background-color: #393939;
  display: block;
}


