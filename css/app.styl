}

/* ----------------------------------------------
 slider
---------------------------------------------- */
.slide-nav {
  text-align: center;
}
.slide-nav ul {
    margin: 0 0 0 20px;
    padding: 0;
}
.slide-nav li {
  display: inline-block;
  width: 10px;
  height: 10px;
  background: rgb(175, 56, 56);
  cursor: pointer;
  margin-left: .5em;
}
.slide-nav li.current {
  background: rgb(144, 39, 39);
}
