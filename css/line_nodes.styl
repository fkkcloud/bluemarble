
/* ----------------------------------------------
 line - nodes
---------------------------------------------- */
.slide-lines{}

.start-node{
  position: relative;
  display: inline-block;
  float:left;
  top: 175px;
  left: 200px;
  width: 44px;
  height: 44px;
  border-radius: 50%;
  z-index:10;
  background-color: #FF7777;
  border: 4px solid #FF0000;
  transform: scale(0.0);
}
@-webkit-keyframes nodestart {
  2% {
    transform: scale(1.0);
    background-color: #FF7777;
  }

  100% {
    transform: scale(1.0);
    background-color: #FF7777;
  }
}
.start-node-animation{
  -webkit-animation: nodestart 70s linear;
}
.end-node{
  position: relative;
  display: inline-block;
  float:left;
  top: 175px;
  left: 445px;
  width: 24px;
  height: 24px;
  background-color: #FFF;
  border-radius: 50%;
  z-index:10;
  border: 2px solid #FF0000;
  transform: scale(0.0);
}
.end-node-animation{
  -webkit-animation: nodeend 70s linear;
}
@-webkit-keyframes nodeend {
  2% {
    transform: scale(1.0);
    background-color: #FFF;
  }

  56% {
    background-color: #FFF;
    transform: scale(1.0);
    border-radius: 50%;
  }

  57% {
    background-color: #FF7777;
    transform: scale(1.4);
    border-radius: 10%;
  }

  100% {
    background-color: #FF7777;
    transform: scale(1.4);
    border-radius: 10%;
  }
}
